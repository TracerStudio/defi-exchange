{
  "name": "defi-exchange",
  "version": "1.0.0",
  "description": "DeFi Exchange Platform with USDT deposits and virtual swaps",
  "main": "admin-server.js",
  "scripts": {
    "start": "node admin-server.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "node admin-server.js",
    "client": "cd src && npm start",
    "bot": "cd telegram-bot && node bot.js",
    "build": "npm install && cd src && npm install --legacy-peer-deps && cd .. && npx react-scripts build",
    "install-all": "npm install && cd src && npm install && cd ../telegram-bot && npm install"
  },
  "keywords": [
    "defi",
    "exchange",
    "usdt",
    "ethereum",
    "swap"
  ],
  "author": "DeFi Exchange Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "node-fetch": "^2.6.7",
    "ethers": "^6.8.1",
    "react-scripts": "5.0.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
