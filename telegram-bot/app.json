{
  "name": "defi-exchange-telegram-bot",
  "description": "Telegram bot for DeFi Exchange withdrawal requests",
  "repository": "https://github.com/TracerStudio/defi-exchange",
  "logo": "https://raw.githubusercontent.com/TracerStudio/defi-exchange/main/public/logo-png/logo.png",
  "keywords": ["telegram", "bot", "defi", "exchange", "withdrawal"],
  "image": "heroku/nodejs",
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ],
  "env": {
    "TELEGRAM_BOT_TOKEN": {
      "description": "Your Telegram Bot Token from @BotFather",
      "required": true
    },
    "ADMIN_CHAT_ID": {
      "description": "Your Telegram Chat ID for receiving withdrawal requests",
      "required": true
    },
    "BACKEND_URL": {
      "description": "URL of your backend server",
      "value": "https://defi-exchange-backend.onrender.com"
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "free"
    }
  }
}
